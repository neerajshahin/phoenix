{%- set assetPath = "../" if page.outputPath != "_site/index.html" else "" -%}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <title>{{ title or (site.name + " - Premium Taxi Service in Dehradun | Car Rental & Cab Booking") }}</title>
  <meta content="{{ description or site.description }}" name="description" />
  <meta content="{{ keywords or site.keywords }}" name="keywords" />
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content="{{ title or (site.name + ' - Premium Taxi Service in Dehradun') }}" />
  <meta property="og:description" content="{{ description or site.description }}" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="{{ site.url }}{{ page.url }}" />
  <meta property="og:image" content="{{ site.url }}{{ ogImage or '/assets/img/phoenix.png' }}" />
  <meta property="og:site_name" content="{{ site.name }}" />
  
  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="{{ title or (site.name + ' - Premium Taxi Service in Dehradun') }}" />
  <meta name="twitter:description" content="{{ description or site.description }}" />
  <meta name="twitter:image" content="{{ site.url }}{{ ogImage or '/assets/img/phoenix.png' }}" />
  
  <!-- Additional SEO Meta Tags -->
  <meta name="robots" content="index, follow" />
  <meta name="author" content="Phoenix Cabs" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="canonical" href="{{ canonicalUrl or (site.url + page.url) }}" />
  
  <!-- Google Analytics -->
  <!-- Replace GA_MEASUREMENT_ID with actual Google Analytics ID when available -->
  {% if googleAnalyticsId %}
  <script async src="https://www.googletagmanager.com/gtag/js?id={{ googleAnalyticsId }}"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', '{{ googleAnalyticsId }}');
  </script>
  {% endif %}
  
  <!-- Local Business Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": "{{ site.name }}",
    "description": "{{ site.description }}",
    "url": "{{ site.url }}",
    "telephone": "{{ site.phone }}",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Dehradun",
      "addressRegion": "Uttarakhand",
      "addressCountry": "IN"
    },
    "serviceArea": {
      "@type": "GeoCircle",
      "geoMidpoint": {
        "@type": "GeoCoordinates",
        "latitude": 30.3165,
        "longitude": 78.0322
      },
      "geoRadius": "500000"
    },
    "priceRange": "$$",
    "openingHours": "Mo-Su 00:00-23:59",
    "areaServed": ["Dehradun", "Delhi", "Uttarakhand", "India"],
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Taxi Services",
      "itemListElement": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Airport Taxi Service",
            "description": "Reliable airport transfer service"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Char Dham Yatra",
            "description": "Spiritual pilgrimage taxi service"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Outstation Travel",
            "description": "Long distance travel service"
          }
        }
      ]
    }
  }
  </script>

  <!-- Favicons -->
  <link href="{{assetPath}}assets/img/phoenix.png" rel="icon" />
  <link href="{{assetPath}}assets/img/phoenix.png" rel="apple-touch-icon" />
  <link href="{{assetPath}}assets/img/favicon.ico" rel="shortcut icon" type="image/x-icon" />

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com" rel="preconnect" />
  <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
    rel="stylesheet" />

  <!-- Vendor CSS Files -->
  <link href="{{assetPath}}assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
  <link href="{{assetPath}}assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
  <link href="{{assetPath}}assets/vendor/aos/aos.css" rel="stylesheet" />
  <link href="{{assetPath}}assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
  <link href="{{assetPath}}assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" />
  <link href="{{assetPath}}assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" />

  <!-- Main CSS File -->
  <link href="{{assetPath}}assets/css/main.css" rel="stylesheet" />

  <!-- Additional CSS for specific pages -->
  {% if extraCSS %}
    {{ extraCSS | safe }}
  {% endif %}

  <style>
    .active a {
      color: var(--accent-color) !important;
      font-weight: bold;
    }
  </style>
</head>

<body class="{{ bodyClass or '' }}">
  {% include "header.njk" %}

  <main class="main">
    {{ content | safe }}
  </main>

  {% include "footer.njk" %}

  <!-- Scroll Top -->
  <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center">
    <i class="bi bi-arrow-up-short"></i>
  </a>

  <!-- WhatsApp Icon -->
  <a href="https://wa.me/+917983438214" target="_blank" class="whatsapp-icon">
    <i class="fab fa-whatsapp"></i>
  </a>

  <!-- Vendor JS Files -->
  <script src="{{assetPath}}assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="{{assetPath}}assets/vendor/aos/aos.js"></script>
  <script src="{{assetPath}}assets/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="{{assetPath}}assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="{{assetPath}}assets/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="{{assetPath}}assets/vendor/purecounter/purecounter_vanilla.js"></script>

  <!-- Main JS File -->
  <script src="{{assetPath}}assets/js/main.js"></script>

  <!-- Additional JS for specific pages -->
  {% if extraJS %}
    {{ extraJS | safe }}
  {% endif %}
</body>
</html>