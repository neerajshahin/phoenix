  <script>
    // Captcha functionality
    let currentCaptchaAnswer = '';
    
    function generateCaptcha() {
      const canvas = document.getElementById('captcha-canvas');
      if (!canvas) return;
      
      const ctx = canvas.getContext('2d');
      
      // Clear canvas
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      
      // Generate random math problem
      const num1 = Math.floor(Math.random() * 10) + 1;
      const num2 = Math.floor(Math.random() * 10) + 1;
      const operators = ['+', '-'];
      const operator = operators[Math.floor(Math.random() * operators.length)];
      
      let answer;
      if (operator === '+') {
        answer = num1 + num2;
      } else {
        answer = num1 - num2;
      }
      
      currentCaptchaAnswer = answer.toString();
      
      // Draw background with noise
      const gradient = ctx.createLinearGradient(0, 0, canvas.width, canvas.height);
      gradient.addColorStop(0, '#f8f9fa');
      gradient.addColorStop(1, '#e9ecef');
      ctx.fillStyle = gradient;
      ctx.fillRect(0, 0, canvas.width, canvas.height);
      
      // Add noise lines
      for (let i = 0; i < 5; i++) {
        ctx.strokeStyle = `rgba(${Math.random() * 100}, ${Math.random() * 100}, ${Math.random() * 100}, 0.3)`;
        ctx.lineWidth = Math.random() * 2 + 1;
        ctx.beginPath();
        ctx.moveTo(Math.random() * canvas.width, Math.random() * canvas.height);
        ctx.lineTo(Math.random() * canvas.width, Math.random() * canvas.height);
        ctx.stroke();
      }
      
      // Draw text
      const expression = `${num1} ${operator} ${num2} = ?`;
      ctx.font = '18px Arial';
      ctx.textAlign = 'center';
      ctx.textBaseline = 'middle';
      
      const chars = expression.split('');
      let currentX = 20;
      
      chars.forEach((char, index) => {
        ctx.save();
        
        // Random rotation and position variation
        const rotation = (Math.random() - 0.5) * 0.3;
        const yOffset = (Math.random() - 0.5) * 8;
        
        ctx.translate(currentX, canvas.height / 2 + yOffset);
        ctx.rotate(rotation);
        
        // Random color
        const colors = ['#495057', '#6c757d', '#343a40', '#212529'];
        ctx.fillStyle = colors[Math.floor(Math.random() * colors.length)];
        
        ctx.fillText(char, 0, 0);
        ctx.restore();
        
        currentX += ctx.measureText(char).width + 2;
      });
      
      // Clear captcha input and validate form
      const captchaInput = document.getElementById('captcha-input');
      if (captchaInput) {
        captchaInput.value = '';
        validateContactForm();
      }
    }
    
    function validateCaptcha() {
      const captchaInput = document.getElementById('captcha-input');
      return captchaInput && captchaInput.value.trim() === currentCaptchaAnswer;
    }
    
    function validateContactForm() {
      const submitBtn = document.getElementById('submit-contact-btn');
      const nameField = document.getElementById('name');
      const emailField = document.getElementById('email');
      const captchaValid = validateCaptcha();
      
      let allFieldsValid = true;
      
      // Check required fields
      if (!nameField || !nameField.value.trim()) allFieldsValid = false;
      if (!emailField || !emailField.value.trim()) allFieldsValid = false;
      
      if (submitBtn) {
        submitBtn.disabled = !(allFieldsValid && captchaValid);
      }
    }
    
    // Contact form initialization
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize captcha
        generateCaptcha();
        
        // Add event listeners for form validation
        const formInputs = ['name', 'email', 'captcha-input'];
        formInputs.forEach(fieldId => {
          const field = document.getElementById(fieldId);
          if (field) {
            field.addEventListener('input', validateContactForm);
            field.addEventListener('blur', validateContactForm);
          }
        });
        
        // Add a small delay to ensure all scripts are loaded
        setTimeout(function() {
            const contactForm = document.getElementById("contact-form");
            console.log('Contact form found:', contactForm);
            console.log('handleFormSubmission function available:', typeof handleFormSubmission);
            console.log('GOOGLE_SCRIPT_URL available:', typeof GOOGLE_SCRIPT_URL !== 'undefined' ? GOOGLE_SCRIPT_URL : 'undefined');
            
            if (contactForm) {
                if (typeof handleFormSubmission === 'function') {
                    console.log('Adding event listener to contact form');
                    contactForm.addEventListener("submit", function(event) {
                        console.log('Contact form submit event triggered');
                        handleFormSubmission(event, 'contact');
                    });
                } else {
                    console.error('‚ùå handleFormSubmission function not available, form submission will not work');
                }
            }
        }, 100);
    });
  </script>
