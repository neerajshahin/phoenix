        `;
      }
    }

    // Manual refresh function
    async function refreshFuelPrices() {
      const refreshBtn = document.querySelector('#fuel-price-display button');
      if (refreshBtn) {
        refreshBtn.innerHTML = '<i class="bi bi-arrow-clockwise spin"></i> Loading...';
        refreshBtn.disabled = true;
      }
      
      // Force refresh by resetting lastFetchTime
      lastFetchTime = 0;
      await fetchLiveFuelPrices();
      
      if (refreshBtn) {
        refreshBtn.innerHTML = '<i class="bi bi-arrow-clockwise"></i> Refresh';
        refreshBtn.disabled = false;
      }
    }

    // Get seasonal multiplier
    function getSeasonalMultiplier() {
      const month = new Date().getMonth() + 1;
      return [5, 6, 12, 1].includes(month) ? 1.15 : 1.0;
    }

    // Get distance multiplier
    function getDistanceMultiplier(distance) {
      if (distance <= 100) return 1.0;
      if (distance <= 200) return 1.1;
      if (distance <= 300) return 1.2;
      if (distance <= 500) return 1.3;
      return 1.4;
    }

    // Calculate fare for a vehicle
    function calculateFare(vehicle, fuelPrice, distance, charges, seasonalMultiplier) {
      let { hillDriveSurcharge = 0, nightCharge = 0 } = charges;
      
      const fuelCostPerKm = fuelPrice / vehicle.mileage;
      const baseRatePerKm = fuelCostPerKm * 1.5;
      
      const distanceMultiplier = getDistanceMultiplier(distance);
      const adjustedRatePerKm = baseRatePerKm * distanceMultiplier;
      
      const baseDistance = 100;
      const extraBlockSize = 50;
      
      const baseFare = Math.min(distance, baseDistance) * adjustedRatePerKm;
      const extraDistance = Math.max(0, distance - baseDistance);
      const extraBlocks = Math.ceil(extraDistance / extraBlockSize);
      const extraFare = extraBlocks * extraBlockSize * adjustedRatePerKm;
      
      let total = baseFare + extraFare + vehicle.driverAllowance + hillDriveSurcharge + nightCharge;
      total *= seasonalMultiplier;
      
      return {
        vehicleType: vehicle.type,
        model: vehicle.model,
        fuelType: vehicle.fuelType.toUpperCase(),
        mileage: vehicle.mileage,
        fuelPrice: `₹${fuelPrice.toFixed(2)}/litre`,
        baseRatePerKm: `₹${baseRatePerKm.toFixed(2)}`,
        baseFare: baseFare.toFixed(2),
        extraFare: extraFare.toFixed(2),
        driverAllowance: vehicle.driverAllowance,
        hillDriveSurcharge,
        nightCharge,
        distanceMultiplier,
        seasonalMultiplier,
        totalFare: total.toFixed(2),
      };
    }

    // Calculate fare estimates
    async function calculateFareEstimate() {
      const distance = parseFloat(document.getElementById('calc-distance').value);
      const includeHillDrive = document.getElementById('calc-hillDrive').checked;
      const includeNightCharge = document.getElementById('calc-nightCharge').checked;
      
      if (!distance || distance <= 0) {
        alert('Please enter a valid distance');
        return;
      }
      
      // Show loading state
      const calcBtn = document.querySelector('button[onclick="calculateFareEstimate()"]');
      const originalText = calcBtn.innerHTML;
      calcBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Calculating...';
      calcBtn.disabled = true;
      
      try {
        // Fetch live fuel prices first
        await fetchLiveFuelPrices();
        
        const hillDriveSurcharge = includeHillDrive ? 400 : 0;
        const nightCharge = includeNightCharge ? 300 : 0;
        const seasonalMultiplier = getSeasonalMultiplier();
        
        const results = vehicles.map(vehicle => {
          const fuelPrice = liveFuelPrices[vehicle.fuelType];
          return calculateFare(vehicle, fuelPrice, distance, { hillDriveSurcharge, nightCharge }, seasonalMultiplier);
        });
        
        displayResults(results, distance, hillDriveSurcharge, nightCharge, seasonalMultiplier);
      } finally {
        // Restore button state
        calcBtn.innerHTML = originalText;
        calcBtn.disabled = false;
      }
    }

    // Display calculation results
    function displayResults(results, distance, hillDriveSurcharge, nightCharge, seasonalMultiplier) {
      const resultsDiv = document.getElementById('calc-results');
      
      const rows = results.map(item => `
        <tr>
          <td><strong>${item.vehicleType}</strong><br><small>${item.model}</small></td>
          <td>${item.fuelType}<br><small>${item.mileage} km/l</small></td>
          <td>${item.fuelPrice}</td>
          <td>₹${item.totalFare}</td>
        </tr>
      `).join('');
      
      resultsDiv.innerHTML = `
