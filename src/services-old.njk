    // Fetch live fuel prices from API
    async function fetchLiveFuelPrices() {
      const now = Date.now();
      
      // Don't fetch if we've fetched in the last 30 minutes
      if (now - lastFetchTime < 30 * 60 * 1000) {
        return liveFuelPrices;
      }

      if (isLoading) {
        return liveFuelPrices;
      }

      try {
        isLoading = true;
        
        const response = await fetch(FUEL_API.url, {
          method: 'GET',
          headers: FUEL_API.headers
        });

        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }

        const data = await response.json();
        
        if (data && data.fuel) {
          liveFuelPrices = {
            petrol: parseFloat(data.fuel.petrol.retailPrice) || defaultFuelPrices.petrol,
            diesel: parseFloat(data.fuel.diesel.retailPrice) || defaultFuelPrices.diesel
          };
          lastFetchTime = now;
          console.log('✅ Live fuel prices updated:', liveFuelPrices);
          
          // Update the price display if it exists
          updatePriceDisplay();
        } else {
          throw new Error('Invalid API response format');
        }
      } catch (error) {
        console.warn('⚠️ Failed to fetch live fuel prices, using defaults:', error.message);
        liveFuelPrices = { ...defaultFuelPrices };
      } finally {
        isLoading = false;
      }

      return liveFuelPrices;
    }

    // Update price display in the UI
    function updatePriceDisplay() {
      const priceDisplay = document.getElementById('fuel-price-display');
      if (priceDisplay) {
