          <h4 class="text-center mb-3">Fare Estimate for ${distance} km</h4>
          <div class="row mb-3">
            <div class="col-md-6">
              <p><strong>Seasonal Multiplier:</strong> ${seasonalMultiplier}x</p>
              <p><strong>Hill Drive Surcharge:</strong> ₹${hillDriveSurcharge}</p>
            </div>
            <div class="col-md-6">
              <p><strong>Night Charge:</strong> ₹${nightCharge}</p>
              <p><strong>Base Rate:</strong> Fuel cost × 1.5</p>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-dark">
                <tr>
                  <th>Vehicle Type</th>
                  <th>Fuel Info</th>
                  <th>Fuel Price</th>
                  <th>Total Fare</th>
                </tr>
              </thead>
              <tbody>${rows}</tbody>
            </table>
          </div>
          <div class="text-center mt-3">
            <p class="text-muted"><small>* Prices are estimates and may vary based on actual fuel prices and route conditions</small></p>
            <a href="tel:+917983438214" class="btn btn-primary">Book Now - Call +91 79834 38214</a>
          </div>
        </div>
      `;
    }

    // Map functionality

    // Toggle distance map display
    function toggleDistanceMap() {
      const mapSection = document.getElementById('distance-map-section');
      const mapToggleBtn = document.getElementById('map-toggle-btn');
      
      if (!mapSection || !mapToggleBtn) {
        console.error('Map elements not found');
        return;
      }
      
      if (mapSection.style.display === 'none') {
        mapSection.style.display = 'block';
        mapToggleBtn.innerHTML = '<i class="bi bi-map-fill"></i> Map';
        
        // Initialize map if not already done
        setTimeout(() => {
          if (!distanceMap) {
            initializeMap();
          }
        }, 100);
      } else {
        mapSection.style.display = 'none';
        mapToggleBtn.innerHTML = '<i class="bi bi-map"></i> Map';
      }
    }

    // Initialize Leaflet map
    function initializeMap() {
      // Check if Leaflet is loaded
      if (typeof L === 'undefined') {
        console.error('Leaflet library not loaded');
        return;
      }

      const phoenixLocation = [30.3431, 77.8999]; // Phoenix Cabs location

      // Initialize map
      distanceMap = L.map('distance-map').setView(phoenixLocation, 10);

      // Add OpenStreetMap tiles
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '© OpenStreetMap contributors'
      }).addTo(distanceMap);

      // Add origin marker (Phoenix Cabs)
      originMarker = L.marker(phoenixLocation, {
        draggable: false,
        icon: L.divIcon({
          className: 'custom-div-icon',
          html: '<div style="background-color: #28a745; color: white; border-radius: 50%; width: 20px; height: 20px; display: flex; align-items: center; justify-content: center; font-size: 12px; font-weight: bold;">P</div>',
          iconSize: [20, 20],
          iconAnchor: [10, 10]
        })
      }).addTo(distanceMap);

      originMarker.bindPopup('Phoenix Cabs, Dehradun').openPopup();

      // Add click handler for selecting destination
      distanceMap.on('click', function(e) {
        setDestinationMarker(e.latlng);
      });

      console.log('Map initialized successfully');
    }

    // Set destination marker and calculate route
    function setDestinationMarker(latlng) {
      if (destinationMarker) {
        distanceMap.removeLayer(destinationMarker);
      }

      destinationMarker = L.marker(latlng, {
        draggable: true,
        icon: L.divIcon({
          className: 'custom-div-icon',
          html: '<div style="background-color: #dc3545; color: white; border-radius: 50%; width: 20px; height: 20px; display: flex; align-items: center; justify-content: center; font-size: 12px; font-weight: bold;">D</div>',
          iconSize: [20, 20],
          iconAnchor: [10, 10]
        })
      }).addTo(distanceMap);

      destinationMarker.bindPopup('Destination').openPopup();

      // Add drag handler for destination marker
      destinationMarker.on('dragend', function() {
        calculateRoute();
      });

      calculateRoute();
    }

    // Calculate route between origin and destination
    function calculateRoute() {
      if (!originMarker || !destinationMarker) return;

      const origin = originMarker.getLatLng();
      const destination = destinationMarker.getLatLng();

      // Remove existing route
      if (routeControl) {
        distanceMap.removeControl(routeControl);
      }

      // Create new route using Leaflet Routing Machine
      // Since we don't have routing machine, we'll use simple distance calculation
      const distance = calculateDistance(origin.lat, origin.lng, destination.lat, destination.lng);
      
      // Draw a simple line for visual feedback
      if (currentRoute) {
        distanceMap.removeLayer(currentRoute);
      }
      
      currentRoute = L.polyline([origin, destination], {
        color: '#007bff',
        weight: 4,
        opacity: 0.7
      }).addTo(distanceMap);

      // Show route info
      showRouteInfo(distance);
    }

    // Calculate distance between two points (Haversine formula)
    function calculateDistance(lat1, lon1, lat2, lon2) {
      const R = 6371; // Earth's radius in kilometers
      const dLat = (lat2 - lat1) * Math.PI / 180;
      const dLon = (lon2 - lon1) * Math.PI / 180;
      const a = 
        Math.sin(dLat/2) * Math.sin(dLat/2) +
        Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) * 
        Math.sin(dLon/2) * Math.sin(dLon/2);
      const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
      const distance = R * c;
      return Math.round(distance * 1.2); // Add 20% for road distance vs straight line
    }

    // Show route information
    function showRouteInfo(distance) {
      const routeInfo = document.getElementById('route-info');
      const routeText = document.getElementById('route-text');
      
      if (routeText) {
        routeText.textContent = `Distance: ${distance} km (estimated road distance)`;
      }
      
      if (routeInfo) {
        routeInfo.style.display = 'block';
      }
      
      // Store distance for use
      window.mapCalculatedDistance = distance;
    }

    // Apply map-calculated distance to the form
    function applyMapDistance() {
      if (window.mapCalculatedDistance) {
        const distanceInput = document.getElementById('calc-distance');
        if (distanceInput) {
          distanceInput.value = window.mapCalculatedDistance;
        }
        toggleDistanceMap(); // Close the map
        
        // Show success message
        const routeInfo = document.getElementById('route-info');
        if (routeInfo) {
          routeInfo.innerHTML = `
            <div class="alert alert-success py-2 mb-0">
              <i class="bi bi-check-circle-fill"></i> Distance applied: ${window.mapCalculatedDistance} km
            </div>
          `;
          
          // Hide success message after 2 seconds
          setTimeout(() => {
            if (routeInfo) {
              routeInfo.style.display = 'none';
            }
          }, 2000);
        }
      }
    }

    // Select popular destination
    function selectDestination(destinationName) {
      if (!distanceMap) {
        console.error('Map not initialized');
        return;
      }

      const coordinates = popularDestinations[destinationName];
      if (coordinates) {
        const latlng = L.latLng(coordinates[0], coordinates[1]);
        setDestinationMarker(latlng);
        
        // Update destination input
        const destinationInput = document.getElementById('destination-input');
        if (destinationInput) {
          destinationInput.value = destinationName;
        }
        
        // Center map on route
        if (originMarker) {
          const bounds = L.latLngBounds([originMarker.getLatLng(), latlng]);
          distanceMap.fitBounds(bounds, { padding: [20, 20] });
        }
      }
    }

    // Location search functionality
    let searchTimeout = null;
    
    function searchLocation(query) {
      clearTimeout(searchTimeout);
      
      if (query.length < 3) {
        hideSuggestions();
        return;
      }
      
      searchTimeout = setTimeout(() => {
        performLocationSearch(query);
      }, 300);
    }
    
    async function performLocationSearch(query) {
      try {
        // Using Nominatim (OpenStreetMap) geocoding service
        const response = await fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(query)}&countrycodes=in&limit=5`);
        const results = await response.json();
        
        if (results && results.length > 0) {
          showSuggestions(results);
        } else {
          hideSuggestions();
        }
      } catch (error) {
        console.error('Location search failed:', error);
        hideSuggestions();
      }
    }
    
    function showSuggestions(results) {
      const suggestionsDiv = document.getElementById('search-suggestions');
      
      if (results.length === 0) {
        hideSuggestions();
        return;
      }
      
      const suggestionHTML = results.map(result => `
        <div class="suggestion-item p-2 border-bottom cursor-pointer" 
             onclick="selectSearchResult(${result.lat}, ${result.lon}, '${result.display_name.replace(/'/g, '&#39;')}')"
             style="cursor: pointer;">
          <div class="fw-bold small">${result.display_name.split(',')[0]}</div>
          <div class="text-muted" style="font-size: 0.75rem;">${result.display_name}</div>
        </div>
      `).join('');
      
      suggestionsDiv.innerHTML = suggestionHTML;
      suggestionsDiv.style.display = 'block';
    }
    
    function hideSuggestions() {
      const suggestionsDiv = document.getElementById('search-suggestions');
      suggestionsDiv.style.display = 'none';
    }
    
    function selectSearchResult(lat, lng, displayName) {
      const latlng = L.latLng(lat, lng);
      setDestinationMarker(latlng);
      
      // Update destination input
      document.getElementById('destination-input').value = displayName.split(',')[0];
      
      // Center map on route
      const bounds = L.latLngBounds([originMarker.getLatLng(), latlng]);
      distanceMap.fitBounds(bounds, { padding: [20, 20] });
      
      hideSuggestions();
    }
    
    // Close suggestions when clicking outside
    document.addEventListener('click', function(event) {
      const searchContainer = document.querySelector('.position-relative');
      if (searchContainer && !searchContainer.contains(event.target)) {
        hideSuggestions();
      }
    });

    // Initialize calculator on page load
    document.addEventListener('DOMContentLoaded', function() {
      // Set default values
      document.getElementById('calc-distance').value = 150;
      
      // Initialize fuel price display
      updatePriceDisplay();
      
      // Fetch live prices on page load (don't wait for calculation)
      fetchLiveFuelPrices();
    });
  </script>
